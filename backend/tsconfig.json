  {
    "compilerOptions": {
      "target": "ES2020",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "module": "ESNext"  ,
      "moduleResolution": "bundler",
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "typeRoots": [
